@model RentalManagement.Models.Schedule

@{
    ViewBag.Title = "ScheduleShowing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Schedule a Showing</h2>

<br />

<div>
    @using (Html.BeginForm("ScheduleShowing", "Apartments"))
    {
        @Html.AntiForgeryToken()

        <div class="form-inline">
            @*<h5>Enter your name, email address, and date/time </h5>

                @Html.TextAreaFor(model => model.FirstName, 5, 120, null)*@
            
                    @Html.LabelFor(a => a.FirstName)
                    @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
              
            <br/>


                    @Html.LabelFor(a => a.LastName)
                    @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
             
            <br/>
           
                    @Html.LabelFor(a => a.Email)
                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
             
            
            <br/>

                    @Html.LabelFor(a => a.Phone)
                    @Html.TextBoxFor(a => a.Phone, new { @class = "form-control" })

            <br />  

            
                    @Html.LabelFor(a => a.ShowingDate)
                    <input type="date" name="ShowingDate">
             

            <br />

            
                    @Html.LabelFor(a => a.ShowingTime)
                    @Html.TextBoxFor(a => a.ShowingTime, new { @Value = "Enter a time between 10AM and 6PM", @class = "form-control" })

                
            <br />

